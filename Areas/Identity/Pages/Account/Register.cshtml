@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <main role="main" class="pb-3">
        <br />
        <br />
        <br />

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
           
              <div class="input-group mb-3">
                    
                        <input asp-for="Input.FirstName" class="form-control" placeholder="FirstName" />
                  @*      <span asp-validation-for="Input.FirstName" class="text-danger"></span>*@
                       
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                       
                    </div>
                    <div class="input-group mb-3">
                  
                        <input asp-for="Input.LastName" class="form-control" placeholder="LastName" />
                       @* <span asp-validation-for="Input.LastName" class="text-danger"></span>*@
                       
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                       

                    </div>
                    <div class="input-group mb-3">
                    
                        <input asp-for="Input.UserName" class="form-control" placeholder="UserName"/>
                       @* <span asp-validation-for="Input.UserName" class="text-danger" ></span>*@
                      
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                    
                    </div>
                    <div class="input-group mb-3">
                 
                        <input asp-for="Input.Email" class="form-control" placeholder="Email"/>
                       @* <span asp-validation-for="Input.Email" class="text-danger" ></span>*@
                
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                    
                    </div>
                    <div class="input-group mb-3">
                   
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                     @*   <span asp-validation-for="Input.Password" class="text-danger" ></span>*@
                       
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                   
                    </div>
                    <div class="input-group mb-3">
                       
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                       @* <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>*@
                        
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                      
                    </div>
                    <div class="input-group mb-3">
                    
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="PhoneNumber" />
                       @* <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>*@

                        
                            <div class="input-group-text">
                                <span class="fas fa-phone"></span>
                            </div>
                     
                    </div>


<button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

</div>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
