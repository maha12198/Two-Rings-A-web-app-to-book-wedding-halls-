@using Microsoft.AspNetCore.Identity
@inject  SignInManager<ApplicationUser> _signInManager;
@model Final_Project.Areas.Identity.Pages.Account.RegisterModel.InputModel
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<h1 class="offset-1">Update User</h1>


<div class="container">
<div class="row offset-1">
    <div class="col-md-4">
        <form asp-action="UpdateUser" method="post">
      
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
                 <div class="input-group mb-3">
                        
                        <input asp-for="@Model.FirstName" class="form-control" placeholder="FirstName" />
                      
                       @* <span asp-validation-for="@Model.FirstName" class="text-danger"></span>*@
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                     
                        <input asp-for="@Model.LastName" class="form-control" placeholder="LastName" />
                       @* <span asp-validation-for="@Model.LastName" class="text-danger"></span>*@
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>

                    </div>
                    <div class="input-group mb-3">
                 
                        <input asp-for="@Model.UserName" class="form-control" placeholder="UserName"/>
                        @*<span asp-validation-for="@Model.UserName" class="text-danger" ></span>*@
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                
                        <input asp-for="@Model.Email" class="form-control" placeholder="Email"/>
                       @* <span asp-validation-for="@Model.Email" class="text-danger" ></span>*@
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                 
                  
                    <div class="input-group mb-3">
                     
                        <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="PhoneNumber" />
                       @* <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>*@

                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-phone"></span>
                            </div>
                        </div>
                    </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}