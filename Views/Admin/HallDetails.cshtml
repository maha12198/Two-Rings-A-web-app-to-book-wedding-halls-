@using Final_Project.Data
@model Final_Project.Models.ViewModels.HallVM
@inject ApplicationDbContext context
@{
    ViewData["Title"] = "HallDetails";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<h1  >Hall Images</h1>

 <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                   <ol class="carousel-indicators">

                        @for (int i = 0; i < Model.Gallery.Count(); i++)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0 ? "active" : "") "></li>
                        }
                    </ol>
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Gallery.Count(); i++)
                        {
                            <div class="@(i==0 ? "carousel-item active" : "carousel-item") ">
                                <img class="d-block w-100" src="@Model.Gallery[i].URL" alt="@Model.Gallery[i].Name">
                            </div>
                        }


                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
           
      
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12"> 
                     
                              
                        <h1 >@Model.Name</h1>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 ">
                        <span class="label " style="font-size:30px">location: </span>
                        <span  style="font-size:30px">@Model.Location</span>
                    </div>
                </div>

                  <div class="row">
                    <div class="col-md-12 ">
                        <span class="label " style="font-size:30px">Managed By: </span>
                        <a  asp-action="UserDetails" asp-route-id="@Model.mangerid" style="font-size:30px"> @Model.mangerName  <i class="nav-icon fas fa-solid fa-link"></i></a>
                       
                    </div>
                </div>

              
                  <div class="row">
                    <div class="col-md-12 ">
                        <span class="label " style="font-size:30px">Price: </span>
                        <span  style="font-size:30px">@Model.Price</span>
                    </div>
                </div>

<div class="row">
                    <div class="col-md-12 ">
                        <span class="label " style="font-size:30px">Number Of Packages: </span>
                        <span  style="font-size:30px">@context.HallPackages.Where(h=>h.HallId==@Model.Id).ToList().Count()</span>
                    </div>
                </div>
            </div>
        </div>

