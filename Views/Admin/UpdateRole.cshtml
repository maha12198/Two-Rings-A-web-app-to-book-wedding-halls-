
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

@using (Html.BeginForm("UpdateRole", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add Role to User</p>


    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
            <label  class="col-md-2 control-label">Select User</label>
        <div class="col-md-10" >
             @Html.DropDownList("UserName",null,new {@class="form-control"})
        </div>
    </div>

    <div class="form-group">
        <label  class="col-md-2 control-label">Select Role</label>
        <div class="col-md-10">
          @Html.DropDownList("Name",null,new {@class="form-control"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Assign Role"/>
        </div>
    </div>
}